                const rxSpeed = formatSpeed(data.rx);
                
                valueEl.innerHTML = `
                    <span style="color: #22c55e; font-size: 12px;">‚Üë ${txSpeed}</span><br>
                    <span style="color: #3b82f6; font-size: 12px;">‚Üì ${rxSpeed}</span>
                `;
            } else {
                valueEl.textContent = 'N/A';
            }
        } catch (e) {
            valueEl.textContent = '‚Äî';
        }
    }
}

