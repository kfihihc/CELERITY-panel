            }
        } catch (e) {
            card.querySelector('.mobile-stat-value').textContent = '‚Äî';
        }
    }
}

async function loadNodesSpeed() {
    // –§–æ—Ä–º–∞—Ç–∏—Ä–æ–≤–∞–Ω–∏–µ —Å–∫–æ—Ä–æ—Å—Ç–∏
    const formatSpeed = (bytes) => {
        const bits = bytes * 8;
        if (bits < 1000) return `${bits.toFixed(0)} bit/s`;
        if (bits < 1000 * 1000) return `${(bits / 1000).toFixed(1)} Kbit/s`;
        if (bits < 1000 * 1000 * 1000) return `${(bits / 1000 / 1000).toFixed(1)} Mbit/s`;
        return `${(bits / 1000 / 1000 / 1000).toFixed(2)} Gbit/s`;
    };
    
    // Desktop rows
    const nodeRows = document.querySelectorAll('.node-row');
    
    for (const row of nodeRows) {
        const nodeId = row.dataset.nodeid;
        const speedCell = row.querySelector('.node-speed');
        
        speedCell.innerHTML = '<span class="load-placeholder">‚è≥</span>';
        
        try {
            const res = await fetch(`/panel/nodes/${nodeId}/speed`, { credentials: 'include' });
            const data = await res.json();
            
            if (data.success) {
                const txSpeed = formatSpeed(data.tx);
                const rxSpeed = formatSpeed(data.rx);
                
                speedCell.innerHTML = `
                    <span class="speed-up" title="Upload">‚Üë ${txSpeed}</span>
                    <span class="speed-down" title="Download">‚Üì ${rxSpeed}</span>
                `;
            } else {
                speedCell.innerHTML = '<span class="load-placeholder">N/A</span>';
            }
        } catch (e) {
            speedCell.innerHTML = '<span class="load-placeholder">‚Äî</span>';
        }
    }
    
    // Mobile cards
    const mobileCards = document.querySelectorAll('.node-speed-mobile');
    
    for (const card of mobileCards) {
        const nodeId = card.dataset.nodeid;
        const valueEl = card.querySelector('.mobile-stat-value');
        
        valueEl.textContent = '‚è≥';
        
        try {
            const res = await fetch(`/panel/nodes/${nodeId}/speed`, { credentials: 'include' });
            const data = await res.json();
            
            if (data.success) {
